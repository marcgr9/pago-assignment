<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/details_post_height"
    android:background="@color/frag_details_list_background"
    android:orientation="vertical"
    android:padding="@dimen/view_x2"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/text_medium"
        android:layout_marginBottom="@dimen/view_x1"
        tools:text="Ce mai mananca milenialii?" />

    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/frag_home_list_header"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Am dat peste o stire cum ca milenialii trebuie sa se informeze iniante sa..." />

</androidx.appcompat.widget.LinearLayoutCompat>
